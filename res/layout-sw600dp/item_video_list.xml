<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="335dp"
       android:orientation="vertical"
       android:gravity="center_horizontal"
       android:background="@drawable/grid_selector"
        >   
	    <ImageView android:id="@+id/image_news_list"
	        android:layout_width="match_parent"
	        android:layout_height="170dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        />
	    <LinearLayout
	        android:layout_width="fill_parent"
			android:layout_height="150dp"
	        android:orientation="vertical"
	        android:layout_marginTop="2dp"
	        android:layout_marginBottom="3dp"
	        android:gravity="center_vertical"
	         >
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="70dp"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	             >
	             <CheckBox
				    android:id="@+id/checkbox_video"
				    android:layout_width="45dp"
				    android:layout_height="45dp"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:layout_marginRight="10dp"
					/>
			    <TextView
			  	  android:id="@+id/text_news_list"
			  	  android:layout_width="fill_parent"
				  android:layout_height="70dp"
				  android:gravity="center_vertical" 
				  android:textSize="19dp" 
				  android:layout_marginLeft="10dp"
				  android:layout_marginRight="55dp"
				  android:text="text1"
				  android:lines="3"
				  android:ellipsize="end"
				  android:textColor="#383938"
				  />	    
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:orientation="horizontal"
				android:layout_marginLeft="10dp"
			  	android:layout_marginRight="10dp"
		        >
		        <TextView android:id="@+id/text_list_duration"
			      android:layout_width="wrap_content"
				  android:layout_height="20dp"
			      android:text="Time: 4:30"
		       	  android:textSize="15dp"
		       	  android:textColor="#898989"	       	 
			        />
			    <TextView android:id="@+id/text_list_date"
			      android:layout_width="wrap_content"
				  android:layout_height="20dp"
			      android:text="Launch: 2012/12/06"
		       	  android:textSize="15dp"
		       	  android:textColor="#898989"
		       	  android:layout_alignParentRight="true"
			        />	    
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:orientation="horizontal"
				android:layout_marginLeft="10dp"
			  	android:layout_marginRight="10dp"
		        >
		        <TextView android:id="@+id/text_list_views"
			      android:layout_width="wrap_content"
				  android:layout_height="20dp"
			      android:text="7668 Views"
		       	  android:textSize="15dp"
		       	  android:textColor="#898989"	       	 
			        />
			    <TextView android:id="@+id/text_list_like"
			      android:layout_width="wrap_content"
				  android:layout_height="20dp"
			      android:text="566 Likes"
		       	  android:textSize="15dp"
		       	  android:textColor="#898989"
		       	  android:layout_alignParentRight="true"
			        />	    
		    </RelativeLayout>
		    <TextView android:id="@+id/text_author"
	            android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:text="by GoogleDeveloper"
				android:layout_marginLeft="10dp"
				android:textSize="15dp"
	             />	
		    <TextView android:id="@+id/text_id"
		        android:layout_width="0dp"
				android:layout_height="0dp"
		        />    
	    </LinearLayout>
    </LinearLayout>    
</LinearLayout>